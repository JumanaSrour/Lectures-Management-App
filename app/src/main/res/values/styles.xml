<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="splash_logo_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="intro_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Theme_edit_text" parent="Widget.Design.TextInputLayout">
        <item name="android:colorControlNormal">@color/main_color</item>
        <item name="android:colorControlActivated">@color/main_color</item>
        <item name="android:colorControlHighlight">@color/main_color</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/txt_color</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/txt_color</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@drawable/edt_bg_selected</item>
    </style>


    <style name="TextInputEditTextStyleGray">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/et_comment</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@drawable/ed_bg_style</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/montserrat</item>
    </style>
</resources>